<div class="mx-auto max-w-7xl px-3 sm:px-6 lg:px-8">
    {{> headerSection}}
    <div class="absolute top-5 right-5 ">
        <img id="qrcode" src="{{qrCodeUrl}}" alt="QR Code">
        <a href="{{serverUrl}}">{{serverUrl}}</a>
    </div>
    <div class="flex items-center gap-5 justify-end mb-7">
        <a href="/download-zip" download class="inline-grid place-items-center rounded-full bg-indigo-600 px-3.5 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-colors">
          Tout télécharger en ZIP
        </a>
    </div>
    <ul role="list" class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
        {{#each files}}
            {{> photoItem}}
        {{/each}}
    </ul>
</div>
